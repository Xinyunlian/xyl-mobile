{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "alwaysStrict": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "ES2015.Promise",
      "ES5",
      "ES6",
      "ES2015.Symbol"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "test",
    "externals",
    "Temporary"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false,
    "useCache": true
  },
  "files": [
    "typings/index.d.ts"
  ]
}